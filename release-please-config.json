{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "simple",
      "component": "combicode",
      "version-file": {
        "type": "plain-text",
        "path": "combicode-py/combicode/__init__.py",
        "regex": "__version__ = \"(?<version>.*)\""
      },
      "extra-files": [
        {
          "type": "json",
          "path": "combicode-js/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "combicode-js/package-lock.json",
          "jsonpath": "$.version"
        }
      ]
    }
  }
}
