{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "simple",
      "component": "combicode",
      "version-file": "combicode-js/package.json",
      "extra-files": [
        {
          "type": "json",
          "path": "combicode-js/package-lock.json",
          "jsonpath": "$.version"
        },
        {
          "type": "python",
          "path": "combicode-py/combicode/__init__.py"
        }
      ],
      "tag-name": "v${version}"
    }
  }
}
